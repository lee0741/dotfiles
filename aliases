# Programming
alias pi='pip install'
alias ven='source bin/activate'
alias bi='brew install'
alias bs='brew search'
alias bl='brew list'
alias bu='brew uninstall'
alias gi='gem install'
alias ss='python -m SimpleHTTPServer'
alias ps='ps ax | ag -i'
alias ax='chmod +x'
alias css='sass --watch --debug-info --scss --sourcemap style.scss:style.css'

# Utilities
alias cs='chsh -s /bin/bash'
alias ipy='ipython --pylab'
alias fa='less ~/code/zsh/cli-editing'
alias top='htop'
alias cc='pygmentize -g'
alias r3='mplayer -cache 8192 -cache-min 50 -playlist ~/Music/Playlist/bbc_r3.pls'
alias proxy='export http_proxy=http://127.0.0.1:8087'

# Show/hide hidden files in Finder
alias show="defaults write com.apple.Finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.Finder AppleShowAllFiles -bool false && killall Finder"

# Xunlei
alias lxd='lx download'
alias lxdd='lx delete'

